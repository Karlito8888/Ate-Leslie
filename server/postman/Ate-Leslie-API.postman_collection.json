							"port": "5000",
							"path": ["api", "v1", "users", "admin", ":id", "password"],
							"variable": [
								{
									"key": "id",
									"value": "",
									"description": "ID de l'administrateur"
								}
							]
						},
						"headers": {
							"Authorization": "Bearer {{token}}"
						},
						"body": {
							"mode": "raw",
							"raw": "{\n    \"currentPassword\": \"Admin123!\",\n    \"newPassword\": \"NouveauMotDePasse123!\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"description": "Change le mot de passe d'un administrateur"
					}
				}
			]
		},
