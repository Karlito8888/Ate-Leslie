	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"url": {
					"raw": "http://localhost:5000",
					"protocol": "http",
					"host": ["localhost"],
					"port": "5000"
				},
				"description": "Vérifie si l'API fonctionne"
			}
		},
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
