	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"url": {
					"raw": "http://localhost:5000/health",
					"protocol": "http",
					"host": ["localhost"],
					"port": "5000",
					"path": ["health"]
				},
				"description": "Vérifie si l'API fonctionne"
			}
		},
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://localhost:5000/api/v1/auth/register",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "auth", "register"]
						},
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"john_doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"Password123!\",\n    \"confirmPassword\": \"Password123!\",\n    \"newsletterSubscribed\": true\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"description": "Inscription d'un nouvel utilisateur (newsletterSubscribed est optionnel, par défaut à true)"
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://localhost:5000/api/v1/auth/login",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "auth", "login"]
						},
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john@example.com\",\n    \"password\": \"Password123!\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"description": "Connexion utilisateur (admin ou utilisateur normal)"
					}
				},
				{
					"name": "Forgot Password",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://localhost:5000/api/v1/auth/forgot-password",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "auth", "forgot-password"]
						},
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john@example.com\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"description": "Demande de réinitialisation de mot de passe"
					}
				},
				{
					"name": "Reset Password",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://localhost:5000/api/v1/auth/reset-password/:token",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "auth", "reset-password", ":token"],
							"variable": [
								{
									"key": "token",
									"value": "",
									"description": "Token de réinitialisation reçu par email"
								}
							]
						},
						"body": {
							"mode": "raw",
							"raw": "{\n    \"password\": \"NewPassword123!\",\n    \"confirmPassword\": \"NewPassword123!\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"description": "Réinitialisation du mot de passe avec le token"
					}
				},
				{
					"name": "Get Profile",
					"request": {
						"method": "GET",
						"url": {
							"raw": "http://localhost:5000/api/v1/auth/profile",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "auth", "profile"]
						},
						"headers": {
							"Authorization": "Bearer {{token}}"
						},
						"description": "Obtenir le profil de l'utilisateur connecté"
					}
				},
				{
					"name": "Update Profile",
					"request": {
						"method": "PUT",
						"url": {
							"raw": "http://localhost:5000/api/v1/auth/profile",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "auth", "profile"]
						},
						"headers": {
							"Authorization": "Bearer {{token}}"
						},
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"nouveau_nom\",\n    \"email\": \"nouveau@email.com\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"description": "Mettre à jour le profil utilisateur"
					}
				},
				{
					"name": "Change Password",
					"request": {
						"method": "PUT",
						"url": {
							"raw": "http://localhost:5000/api/v1/auth/profile/password",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "auth", "profile", "password"]
						},
						"headers": {
							"Authorization": "Bearer {{token}}"
						},
						"body": {
							"mode": "raw",
							"raw": "{\n    \"currentPassword\": \"Password123!\",\n    \"newPassword\": \"NewPassword123!\",\n    \"confirmPassword\": \"NewPassword123!\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"description": "Changer le mot de passe utilisateur"
					}
				}
			]
		},
