						"method": "POST",
						"url": {
							"raw": "http://localhost:5000/api/v1/auth/register",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "auth", "register"]
						},
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"john_doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"Password123!\",\n    \"confirmPassword\": \"Password123!\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"description": "Inscription d'un nouvel utilisateur"
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://localhost:5000/api/v1/auth/login",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "auth", "login"]
						},
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin1@ateleslie.com\",\n    \"password\": \"Admin123!\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"description": "Connexion utilisateur"
					}
				},
				{
					"name": "Get Profile",
					"request": {
						"method": "GET",
						"url": {
							"raw": "http://localhost:5000/api/v1/auth/profile",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "auth", "profile"]
						},
						"headers": {
							"Authorization": "Bearer {{token}}"
						},
						"description": "Obtenir le profil de l'utilisateur connecté"
					}
				},
				{
					"name": "Update Profile",
					"request": {
						"method": "PUT",
