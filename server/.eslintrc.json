{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "singleQuote": true,
        "semi": true,
        "tabWidth": 2
      }
    ],
    "no-console": ["warn", { "allow": ["info", "warn", "error"] }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
  }
}
